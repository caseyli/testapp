<h1>Creating a new News Post</h1>

<%= form_for @news_post do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit %>
  </div>

<% end %>